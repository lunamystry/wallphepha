#: kivy 1.8.0
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory

<Screen>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            size: self.size


<PhephaView>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            padding: '5dp'
            canvas:
                Color:
                    rgb: .1, .1, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.filename
                font_size: '16sp'
        AsyncImage:
            source: root.image_url


<PhephaListItem>:
    size_hint: 1, None
    canvas:
        Color:
            rgba: 0, 0, 0, 0.7
        Rectangle:
            pos: self.pos
            size: self.width, 2

    AsyncImage:
        size_hint: 0.3, None
        height: root.height
        source: root.image_url
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: root.filename
        Button:
            text: '>'
            size_hint_x: None
            width: self.height
            on_release: app.view_phepha(root.image_url)


<Wallpapers>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            canvas:
                Color:
                    rgba: .6, 0, .7, self.opacity - 0.2
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'data/logo.png'
                mipmap: True
                size_hint_x: None
                width: self.height

            Label:
                text: 'Wallpapers'
                font_size: '16sp'

        ListView:
            adapter: ListAdapter(data=root.data, cls=Factory.PhephaListItem, args_converter=root.args_converter)
