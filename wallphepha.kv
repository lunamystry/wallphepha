#: kivy 1.8.0
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory

<Screen>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            size: self.size


<PhephaView>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            padding: '5dp'
            canvas:
                Color:
                    rgb: .1, .1, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'back'
                size_hint_x: None
                on_release: app.view_phepha_list()
            Label:
                text: root.filename
                font_size: '16sp'
            Button:
                text: 'set'
                size_hint_x: None
                on_release: app.set_wallpaper(root.filename)
        AsyncImage:
            source: root.image_url


<PhephaListItem>:
    size_hint: 1, None
    on_release: app.view_phepha(root.image_url)
    selected_color: .1, .1, .1, 1
    deselected_color: .2, .2, .2, 1
    canvas:
        Color:
            rgba: 0, 0, 0, 0.7
        Rectangle:
            pos: self.pos
            size: self.width, 2

    AsyncImage:
        size_hint: 0.3, None
        height: root.height
        source: root.image_url
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: root.filename


<Wallpapers>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            canvas:
                Color:
                    rgba: .6, 0, .7, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'data/logo.png'
                mipmap: True
                size_hint_x: None
                width: self.height

            Label:
                text: 'Wallpapers'
                font_size: '16sp'

        BoxLayout:
            size_hint: 1, None
            height: "30dp"
            spacing: '5dp'
            TextInput:
                size_hint: 0.8, 1
                pos_hint: {"center_x": .5}
                on_text: app.load_wallpapers(self.text)
                on_text_validate: app.load_wallpapers(self.text)
                multiline: False
                hint_text: "wallpaper directory..."
                text: app.phepha_dir
        ListView:
            adapter: ListAdapter(data=root.data, cls=Factory.PhephaListItem, args_converter=root.args_converter)
